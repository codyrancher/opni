{
  "name": "opni",
  "version": "0.1.1",
  "private": false,
  "bin": {
    "protoc-gen-opni-services": "protoc-gen-opni-services/bin/protoc-gen-opni-services"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@rancher/shell": "^0.3.14",
    "@types/lodash": "^4.14.194",
    "chart.js": "^3.9.1",
    "chartjs-plugin-annotation": "^2.0.1",
    "core-js": "3.21.1",
    "css-loader": "4.3.0",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "js-yaml": "4.1.0",
    "lodash": "^4.17.21",
    "marked": "^4.3.0",
    "unique-names-generator": "^4.7.1",
    "vue-chartjs": "^4.1.1",
    "vue-fragment": "^1.6.0",
    "dayjs": "^1.8.16"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.21.0-1",
    "@bufbuild/protobuf": "^1.2.1",
    "@bufbuild/protoc-gen-es": "^1.2.1",
    "@bufbuild/protoplugin": "^1.2.1",
    "protoc-gen-opni-services": "file:./protoc-gen-opni-services/"
  },
  "resolutions": {
    "**/webpack": "4",
    "@types/node": "^16"
  },
  "scripts": {
    "dev": "NODE_ENV=dev ./node_modules/.bin/vue-cli-service serve",
    "dev:standalone": "NODE_ENV=dev IS_STANDALONE=true ./node_modules/.bin/vue-cli-service serve",
    "clean": "./node_modules/@rancher/shell/scripts/clean",
    "build-pkg": "./node_modules/@rancher/shell/scripts/build-pkg.sh",
    "serve-pkgs": "./node_modules/@rancher/shell/scripts/serve-pkgs",
    "publish-pkgs": "./node_modules/@rancher/shell/scripts/extension/publish",

    "codegen-plugin-build": "(cd ./protoc-gen-opni-services && yarn build)",
    "codegen-plugin-install": "yarn install --force",
    "codegen-dev": "yarn codegen-plugin-build && yarn codegen-plugin-install && echo \"\n\n\nGenerating...\n\" && npx buf generate ../plugins",
    
    "docker": "docker build -t opni-ui -f ./Dockerfile .",
    "build": "IS_STANDALONE=true ./node_modules/.bin/vue-cli-service build",
    "start": "node prod.js"

  }
}
